{
  "name": "bemtv",
  "version": "0.5.0",
  "type": "module",
  "license": "MIT",
  "author": "Diogo Neves",
  "description": "Minimalist and lightweight UI library, even with its own markup language and a CSS-In-JS library built into the template, plus a powerful template reactivity system.",
  "keywords": [
    "frontend",
    "UI",
    "reactive",
    "declarative",
    "components",
    "lightweight",
    "bemtv"
  ],
  "types": "./types/main.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "main": "./dist/bemtv.umd.cjs",
  "module": "./dist/bemtv.es.js",
  "exports": {
    ".": {
      "import": "./dist/bemtv.es.js",
      "require": "./dist/bemtv.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "commit": "cz",
    "coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/diogoneves07/bemtvjs.git"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "jest-environment-jsdom": "^29.2.0",
    "semantic-release": "^19.0.5",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4",
    "vite": "^3.0.7"
  },
  "dependencies": {
    "goober": "^2.1.11"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
